@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-5" style="max-width: 500px; width: 100%;">
        <h2 class="text-center text-primary">@ViewData["Title"]</h2>
        <p class="text-center text-muted">Create a new account.</p>

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Email Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <!-- Confirm Password Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="confirm password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <!-- Full Name Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" placeholder="Full Name" />
                <label asp-for="Input.Name">Full Name</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>

            <!-- Location Field -->
            <div class="form-floating mb-3">
                <input asp-for="Input.Location" class="form-control" placeholder="Location" />
                <label asp-for="Input.Location">Location</label>
                <span asp-validation-for="Input.Location" class="text-danger"></span>
            </div>

            <!-- Profile Picture Upload -->
            <div class="mb-3">
                <label asp-for="Input.ImageFile" class="form-label">Profile Picture</label>
                <input asp-for="Input.ImageFile" type="file" class="form-control" />
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-page="./Login" class="text-decoration-none">Already have an account? Log in</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
