{
    "Logging": {
        "LogLevel": {
            // Sets the default logging level to "Information",
            // meaning general app activity will be logged.
            "Default": "Information",

            // Reduces logging for Microsoft.AspNetCore to "Warning",
            // so only important warnings and errors will be logged.
            "Microsoft.AspNetCore": "Warning"
        }
    },

    // Allows requests from any host (useful for development but should be restricted in production).
    "AllowedHosts": "*",

    "ConnectionStrings": {
        "CatForumContext": "Server=(localdb)\\mssqllocaldb;Database=CatForumDB;Trusted_Connection=True;MultipleActiveResultSets=true"
    }
}
